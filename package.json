{
  "name": "js-tools",
  "private": true,
  "version": "0.0.1",
  "description": "default manomano frontend tools configuration",
  "main": "index.js",
  "bin": {
    "mano-scripts": "./index.js"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "link-packages": "lerna link"
  },
  "eslintConfig": {
    "extends": "@manomano/eslint-config"
  },
  "devDependencies": {
    "@manomano/eslint-config": "file:./packages/eslint",
    "@manomano/jest-config": "file:./packages/jest",
    "@manomano/prettier-config": "file:./packages/prettier",
    "@manomano/rollup-config": "file:./packages/rollup",
    "husky": "^1.3.1",
    "lerna": "^3.11.1",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
