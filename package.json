{
  "name": "js-tools",
  "version": "0.1.0",
  "description": "default manomano frontend tools configuration",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "install": "lerna run install:lerna",
    "link-packages": "lerna link",
    "lint": "lerna run lint",
    "publish": "lerna publish",
    "semantic-release": "npx semantic-release",
    "test": "lerna run test"
  },
  "eslintConfig": {
    "extends": "@manomano/eslint-config",
    "rules": {
      "strict": "off"
    }
  },
  "devDependencies": {
    "@manomano/eslint-config": "^0.0.25",
    "@manomano/prettier-config": "^0.0.25",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/gitlab": "^3.1.2",
    "@semantic-release/npm": "^5.1.4",
    "husky": "^1.3.1",
    "lerna": "^3.13.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "semantic-release": "^15.13.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
