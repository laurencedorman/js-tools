{
  "name": "js-tools",
  "version": "0.0.25",
  "description": "default manomano frontend tools configuration",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "install": "yarn install:babel && yarn install:cli && yarn install:eslint && yarn install:jest && yarn install:postcss && yarn install:prettier && yarn install:project-settings && yarn install:rollup && yarn install:utils && yarn install:webpack",
    "install:babel": "cd packages/babel && yarn",
    "install:cli": "cd packages/cli && yarn",
    "install:eslint": "cd packages/eslint && yarn",
    "install:jest": "cd packages/jest && yarn",
    "install:postcss": "cd packages/postcss && yarn",
    "install:prettier": "cd packages/prettier && yarn",
    "install:project-settings": "cd packages/project-settings && yarn",
    "install:rollup": "cd packages/rollup && yarn",
    "install:utils": "cd packages/utils && yarn",
    "install:webpack": "cd packages/webpack && yarn",
    "link-packages": "lerna link",
    "lint": "yarn lint:eslint",
    "lint:eslint": "cd packages/eslint && yarn lint",
    "publish": "lerna publish",
    "semantic-release": "npx semantic-release",
    "test": "yarn test:utils",
    "test:utils": "cd packages/utils && yarn test"
  },
  "eslintConfig": {
    "extends": "@manomano/eslint-config",
    "rules": {
      "strict": "off"
    }
  },
  "devDependencies": {
    "@manomano/eslint-config": "^0.0.19",
    "@manomano/prettier-config": "^0.0.19",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/gitlab": "^3.1.2",
    "@semantic-release/npm": "^5.1.4",
    "husky": "^1.3.1",
    "lerna": "^3.13.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "semantic-release": "^15.13.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
